{
  "presets": [
      [
          "@babel/preset-env",
          {
              "useBuiltIns": "usage",
              "corejs": {
                  "version": "3.10", // mora se poklapati sa instaliranom verzijom (vidi: `package.json`)
                  "proposals": true
              },
              "modules": "auto"
          }
      ],
      "@babel/react",
      "@babel/typescript"
  ],
  "plugins": [
      [
          // ovo smanjuje veli훾inu svakog pojedina훾nog bundle-a zato jer iz pojedina훾nih datoteka uklanjaju boilerplate
          // kod koji build proces doda u svaku datoteku > taj kod se dodaje u dijeljenu datoteku
          "@babel/transform-runtime",
          {
              "corejs": 3,
              "regenerator": true
          }
      ],
      "@babel/proposal-class-properties" // slu탑i tome da podrzi typescript feature
  ]
}
